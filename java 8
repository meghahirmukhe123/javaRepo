1.IntFunction
int[] a={1,2,3,4,5,6};

       IntFunction  <Integer>  p=i->i*i;
  ->inputtype<-   ->returnType<-

for(int j:a)
{
Sysout(p.apply(j));
}


2.LongFunction<return_type>
public return_type apply(long l);


3.DoubleFunction<return_type>
public return_type apply(double d);

//above 1,2,3 are for input type
